<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="@color/silver">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Reminder"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_36sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="top|left"
            android:textSize="@dimen/_20ssp"/>

        <ImageView
            android:id="@+id/btnAddNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_95sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="top|right"
            android:src="@drawable/icon_check"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date : "
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/imgCalendar"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/icon_calendar"
            />

        <TextView
            android:id="@+id/txtAddDates"
            android:inputType="date"
            android:layout_toRightOf="@+id/imgCalendar"
            android:layout_width="match_parent"
            android:gravity="center"
            android:hint="DD/MM/YYYY"
            android:textColorHint="@color/white"
            android:layout_height="@dimen/_30sdp"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time : "
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/imgTime"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/icon_clock"
            />

        <TextView
            android:id="@+id/txtAddTime"
            android:inputType="time"
            android:layout_toRightOf="@+id/imgTime"
            android:layout_width="match_parent"
            android:gravity="center"
            android:hint="HH:MM"
            android:textColorHint="@color/white"
            android:layout_height="@dimen/_30sdp"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note : "
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"/>

    <EditText
        android:id="@+id/edtAddNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:padding="@dimen/_5sdp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/white" />


</LinearLayout>